+	if (submit) {
+		struct pos_io *io = (struct pos_io *)malloc(sizeof(struct pos_io));
+		if (io) {
+			io->ioType = READ;
+			io->volume_id = ibdev->volume.id;
+			io->iov = iov;
+			io->iovcnt = iovcnt;
+			io->length = byte_length;
+			io->offset = byte_offset;
